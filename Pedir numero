package parcial_1;
import javax.swing.JOptionPane;
/**
 *
 * @author CC3B
 */
public class PARCIAL_1 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        int Num;
        int contador=0;
        int suma=0;
       
        
    
        do{
        Num=Integer.parseInt(JOptionPane.showInputDialog("INGRESE NUMERO"));    
        
        if (Num<0){JOptionPane.showMessageDialog(null,"NUMERO NEGATIVO " +Num);}
        
        if (Num>0){JOptionPane.showMessageDialog(null,"NUMERO POSITIVO " +Num);}
        contador++; 
        suma=suma+Num;
        
        JOptionPane.showMessageDialog(null,"TOTAL DE NUMEROS INGRESADOS "+ contador);
        JOptionPane.showMessageDialog(null,"LA SUMA ES DE "+ suma);
        }
        while (Num!=0);
        
    }
    
}
